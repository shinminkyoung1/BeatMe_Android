<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <!-- 단계 표시 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="200dp">

        <!-- 단계 1 -->
        <TextView
            android:id="@+id/step1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/step_circle_active"
            android:text="1"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="14sp" />

        <!-- 점선 연결 -->
        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:background="#F88F58"
            android:alpha="0.5" />

        <!-- 단계 2 -->
        <TextView
            android:id="@+id/step2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/step_circle_inactive"
            android:text="2"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="14sp" />

        <!-- 점선 연결 -->
        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:background="#F88F58"
            android:alpha="0.5" />

        <!-- 단계 3 -->
        <TextView
            android:id="@+id/step3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/step_circle_inactive"
            android:text="3"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="15dp"
        android:progress="50"
        android:progressTint="#EB5A0F" />

    <!-- 승부 선택 버튼들 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="나"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/myChoiceImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/image_circle_border"
                android:src="@drawable/scissors" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="vs"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/counterChoiceImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/image_circle_border"
                android:src="@drawable/questionmark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="상대"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 승부 결과 이미지 -->
        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/correct"
            android:visibility="invisible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="390dp"
            android:layout_marginBottom="40dp">

            <!-- 가위 -->
            <ImageView
                android:id="@+id/scissorsButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/rounded_button"
                android:src="@drawable/scissors" />

            <!-- 주먹 -->
            <ImageView
                android:id="@+id/rockButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="22dp"
                android:background="@drawable/rounded_button"
                android:src="@drawable/rock" />

            <!-- 보 -->
            <ImageView
                android:id="@+id/paperButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="22dp"
                android:background="@drawable/rounded_button"
                android:src="@drawable/paper" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
